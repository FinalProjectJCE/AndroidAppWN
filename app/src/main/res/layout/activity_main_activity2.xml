<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zaken.androidappwn.MainActivity2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:id="@+id/city_type_spinner"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_weight="3" />

            <TextView
                android:text="@string/choose_city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/textView9"

                android:textSize="30dp"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/business_type_spinner"

                android:layout_weight="3" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_bus_text"
                android:id="@+id/textView10"

                android:textSize="30sp"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:id="@+id/branch_type_spinner"

                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/choose_branch"
                android:id="@+id/textView11"

                android:textSize="30sp"
                android:nestedScrollingEnabled="false"
                android:gravity="right"
                android:layout_gravity="right" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שלח"
            android:id="@+id/button"
            android:onClick="send_business"
             />
    </LinearLayout>


</RelativeLayout>
