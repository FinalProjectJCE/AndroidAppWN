<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zaken.androidappwn.MainActivity4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout"
            android:layout_weight="0.3">

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="204dp">


            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/getNoticeButton"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="קבל התראה"
                    android:textSize="30dp"
                    android:onClick="buttonListener" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <Button
                    android:id="@+id/cancelQueueButton"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="בטל תור"
                    android:textSize="30dp"
                    android:onClick="cancelQueueButtonClick"/>

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:id="@+id/business_name_in_queue"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/current_line_in_queue"
        android:id="@+id/separated_line1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="מספר התור הנוכחי הוא: "
        android:id="@+id/current_line_in_queue"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_below="@+id/business_name_in_queue"
        android:layout_alignEnd="@+id/linearLayout2"
        android:padding="20dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/separated_line2"
        android:layout_below="@+id/current_line_in_queue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="טוען..."
        android:id="@+id/currentQueueDisplay_in_queue"
        android:textSize="20sp"
        android:layout_below="@+id/separated_line1"
        android:layout_above="@+id/separated_line2"
        android:padding="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="טוען..."
        android:id="@+id/totalQueueDisplay"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_below="@+id/separated_line2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="מספר האנשים בתור:"
        android:id="@+id/totalQueueText"
        android:textSize="20sp"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_below="@+id/currentQueueDisplay_in_queue"
        android:layout_toEndOf="@+id/business_name_in_queue"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignStart="@+id/current_line_in_queue" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/separated_line3"
        android:layout_below="@+id/totalQueueText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="מספרך בתור הוא:"
        android:id="@+id/userQueue"
        android:textSize="20sp"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_alignRight="@+id/separated_line1"
        android:layout_below="@+id/separated_line3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userQueueDisplay"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_alignBottom="@+id/userQueue"
        android:layout_below="@+id/separated_line3"
        android:layout_alignParentStart="true"
        android:text="טוען..."
        android:textAlignment="viewEnd"
        android:layout_toStartOf="@+id/totalQueueText" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/separated_line5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userQueue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="הזמן הממוצע עד לקבלת התור"
        android:id="@+id/textView7"
        android:layout_below="@+id/userQueue"
        android:layout_alignStart="@+id/userQueue"
        android:layout_alignEnd="@+id/linearLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="טוען..."
        android:id="@+id/timeCounterTV"
        android:layout_below="@+id/userQueueDisplay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_toStartOf="@+id/userQueue"
        android:gravity="center" />

</RelativeLayout>

